<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="10dip">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/text"
		android:text="@string/tour_text_1" android:layout_weight="1"
		android:textSize="17dip"></TextView>
	<Button android:layout_height="wrap_content"
		android:layout_gravity="right" android:text="@string/btn_next"
		android:layout_width="80dip" android:id="@+id/btnNext"></Button>
</LinearLayout>
